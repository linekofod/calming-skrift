---
import "../styles/style.css";
import MainLayout from "../layouts/MainLayout.astro";
import { Image } from "astro:assets";
import calming from "../assets/images/calming.svg";
import calming_white from "../assets/images/calming_white.svg";
import calming_rose from "../assets/images/calming_rose.svg";
import calming_blue from "../assets/images/calming_blue.svg";
import calming_green from "../assets/images/calming_green.svg";
import calming_beige from "../assets/images/calming_beige.svg";
import moodboard from "../assets/images/moodboard.webp";
