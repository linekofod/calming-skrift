        </div>
        <div class="bg-white w-fit p-6">
          <Image src={calming_blue} alt="" width="300" />
        </div>
      </div>
      <div class="flex flex-row gap-4">
        <div class="bg-[#F1ECE6] w-fit p-6">
          <Image src={calming_white} alt="" width="300" />
        </div>
        <div class="bg-[#CCA894] w-fit p-6">
          <Image src={calming} alt="" width="300" />
        </div>
        <div class="bg-white w-fit p-6">
          <Image src={calming_beige} alt="" width="300" />
        </div>
      </div>
    </div>
  </section>

